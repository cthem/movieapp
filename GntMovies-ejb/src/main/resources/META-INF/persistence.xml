<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="GntMoviesBackend"
		transaction-type="JTA">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<jta-data-source>java:/jdbc/GntMoviesDS</jta-data-source>
		<class>com.gnt.movies.entities.Air2dayShow</class>
		<class>com.gnt.movies.entities.Genre</class>
		<class>com.gnt.movies.entities.Movie</class>
		<class>com.gnt.movies.entities.MovieFavorite</class>
		<class>com.gnt.movies.entities.MovieReview</class>
		<class>com.gnt.movies.entities.NowPlayingMovie</class>
		<class>com.gnt.movies.entities.OnTheAirShow</class>
		<class>com.gnt.movies.entities.Show</class>
		<class>com.gnt.movies.entities.ShowFavorite</class>
		<class>com.gnt.movies.entities.ShowReview</class>
		<class>com.gnt.movies.entities.UpcomingMovie</class>
		<class>com.gnt.movies.entities.User</class>
		<class>com.gnt.movies.utilities.LocalDateAttributeConverter</class>
		<class>com.gnt.movies.utilities.LocalDateTimeAttributeConverter</class>
		<class>com.gnt.movies.entities.ShowImage</class>
		<class>com.gnt.movies.entities.MovieImage</class>

		<properties>
			<property name="eclipselink.target-server" value="JBoss" />
			<!-- Uncomment to log all SQL queries executed -->
			<property name="eclipselink.logging.level.sql" value="FINE" />
			<property name="eclipselink.logging.parameters" value="true" />
			<property name="eclipselink.logging.timestamp" value="false" />
			<property name="eclipselink.logging.session" value="false" />
			<property name="eclipselink.logging.thread" value="false" />
			<property name="eclipselink.logging.connection" value="false" />
			<property name="eclipselink.logging.exceptions" value="true" />

		</properties>
	</persistence-unit>
</persistence>
